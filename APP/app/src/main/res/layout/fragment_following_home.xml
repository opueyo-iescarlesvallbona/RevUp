<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FRAGMENTS.FollowingHomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/FollowingHomeFragment_mainActivity_noData"
        android:gravity="center">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/baseline_person_add_disabled_24"
            android:id="@+id/FollowingHomeFragment_mainActivity_icon"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="@string/FollowingHomeFragment_mainActivity_text"
            android:id="@+id/FollowingHomeFragment_mainActivity_text"
            android:textSize="30sp"
            android:layout_margin="10dp"
            android:textStyle="bold"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/FollowingHomeFragment_mainActivity_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</FrameLayout>